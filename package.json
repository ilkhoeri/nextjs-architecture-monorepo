{
  "name": "main",
  "version": "0.1.0",
  "private": true,
  "funding": [
    {
      "type": "sponsors",
      "url": "https://github.com/sponsors/ilkhoeri"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilkhoeri/oeri.git"
  },
  "keywords": [
    "nextjs",
    "monorepo apps",
    "nextjs monorepo"
  ],
  "author": "Ilkhoeri <khoeriilham@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ilkhoeri/oeri/issues"
  },
  "homepage": "https://oeri.vercel.app",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:admin": "next dev --turbopack ./apps/admin",
    "dev:docs": "cd apps/docs && bun build:mdx && cd ../.. && next dev --turbopack ./apps/docs",
    "dev:web": "next dev --turbopack ./apps/web",
    "build:admin": "cd apps/admin && npx prisma generate && next build",
    "build:docs": "cd apps/docs && npx prisma generate && next build",
    "build:web": "cd apps/web && npx prisma generate && next build",
    "generate:exports": "bun run ./scripts/generate-exports.ts"
  },
  "packageManager": "bun@1.2.19",
  "engines": {
    "node": ">=18"
  },
  "workspaces": {
    "packages": [
      "apps/**/*",
      "shared/**/*",
      "packages/**/*"
    ]
  },
  "catalogs": {
    "runtime": {
      "@hookform/resolvers": "^5.2.1",
      "@radix-ui/react-dialog": "^1.1.14",
      "@radix-ui/react-popover": "^1.1.14",
      "@radix-ui/react-select": "^2.2.5",
      "embla-carousel-autoplay": "^8.6.0",
      "embla-carousel-react": "^8.6.0",
      "framer-motion": "^12.23.12",
      "next": "15.4.4",
      "next-themes": "^0.4.6",
      "react": "19.1.0",
      "react-country-region-selector": "^4.0.2",
      "react-day-picker": "8.10.1",
      "react-dom": "19.1.0",
      "react-hook-form": "^7.62.0",
      "react-select": "^5.10.2",
      "sonner": "^2.0.7",
      "vaul": "^1.1.2",
      "xuxi": "^1.0.1",
      "zod": "^4.0.14"
    },
    "testing": {
      "jest": "30.0.0"
    },
    "dev": {
      "@eslint/eslintrc": "^3",
      "@next/eslint-plugin-next": "^14.0.4",
      "@types/bcryptjs": "^3.0.0",
      "@types/jsonwebtoken": "^9.0.10",
      "@types/node": "^20",
      "@types/react": "^19",
      "@types/react-dom": "^19",
      "eslint": "^9",
      "eslint-config-next": "15.4.4",
      "jest": "30.0.0",
      "typescript": "^5.3.3",
      "typescript-eslint": "^8.38.0"
    },
    "ui": {
      "@tailwindcss/postcss": "^4",
      "autoprefixer": "^10.4.16",
      "postcss": "^8.4.33",
      "tailwind-merge": "^3.3.1",
      "tailwindcss": "^4",
      "tw-animate-css": "1.3.6"
    }
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "eslint": "catalog:dev",
    "eslint-config-next": "catalog:dev",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.10",
    "turbo": "latest"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 186,
    "semi": true,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "trailingComma": "none"
  }
}
