{
  "name": "@repo/ui",
  "version": "0.0.0",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    "./styles.css": "./dist/index.css",
    ".": "./src/index.ts",
    "./*": "./src/*.tsx"
  },
  "license": "MIT",
  "scripts": {
    "build": "tailwindcss -i ./src/styles.css -o dist/index.css",
    "lint": "eslint src/",
    "dev": "tailwindcss -i ./src/styles.css -o ./dist/index.css --watch",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": "catalog:runtime",
    "react": "catalog:runtime"
  },
  "dependencies": {
    "@repo/icons": "workspace:*",
    "@repo/store": "workspace:*",
    "xuxi": "catalog:runtime",
    "tailwind-merge": "catalog:ui"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "catalog:dev",
    "autoprefixer": "catalog:ui",
    "postcss": "catalog:ui",
    "react": "catalog:runtime",
    "tailwindcss": "catalog:ui",
    "tw-animate-css": "catalog:ui",
    "tsup": "^8.0.1",
    "typescript": "catalog:dev"
  }
}
